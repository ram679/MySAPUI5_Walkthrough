<Table id="idOrdersTable" items="{/SalesOrderSet}">
    <headerToolbar>
        <OverflowToolbar id="idOverflow">
            <Title text="{/title}"></Title>            <!--Property Binding-->
            <ToolbarSpacer ></ToolbarSpacer>
            <SearchField width="20%" search=".OnSearch" value=""></SearchField>
            <Button tooltip= "{i18n>sort}" icon="sap-icon://sort" press=".OnSort"></Button>
            <Button tooltip="{i18n>group}" icon="sap-icon://group-2" press=".OnGroup"></Button>
        </OverflowToolbar>
    </headerToolbar>

    <columns>
        <Column>
            <Text text="{i18n>salesOrderId}"></Text>
        </Column>
        <Column>
            <Text text="{i18n>customerName}"></Text>
        </Column>
        <Column>
            <Text text="{i18n>status}"></Text>
        </Column>
        <Column>
            <Text text="{i18n>GrossAmount}"></Text>
        </Column>
    </columns>

