<mvc:View controllerName="project1.controller.Overview"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page id="page" title="{i18n>title}">
    <headerContent>
      <Button id="RefreshButton" text="Refresh" type="Emphasized" />

    </headerContent>
    <content>

      <!-- Path - project name.folders one by one -->
      <!-- Fragment Loading in XML File -->
      <core:Fragment id="OrderDetails" fragmentName="project1.view.fragments.Orders" type="XML"
        xmlns:core="sap.ui.core"/>

      <Button id="openFragment" text="Find More Details .." type="Neutral" class="sapUiSmallMarginBegin" press=".onOpenOrderDetails" />

    </content>
  </Page>
</mvc:View>